= resource_page_header("Просмотр роли на проекте #{@resource_instance.name}")
.row
  .col-md-12
    table.table.table-bordered
      tbody
        tr
          td Название
          td = @resource_instance.name
        tr
          td Дата создания
          td = @resource_instance.created_at
        tr
          td Последнее обновление
          td = @resource_instance.updated_at
.row
  .col-md-12
    = link_to "Все роли", project_roles_path, class: 'btn btn-default'
    - if can? :update, resource_class
      = link_to "Редактировать", edit_project_role_path(@resource_instance), class: 'btn btn-info'